FROM ubuntu:16.04

MAINTAINER NAKAI Ryosuke <nakai@shiguredo.jp>

ENV OTP_VERSION 18.3

ADD sources.list /etc/apt/sources.list

RUN apt-get update \
  && apt-get install -y \
         autoconf \
         git \
         build-essential \
         curl \
         libssl-dev \
         ncurses-dev \
  && apt-get clean \
  && rm -rf /var/cache/apt/archives/* /var/lib/apt/lists/*

RUN cd /usr/local/src \
  && git clone -b shiguredo-otp-${OTP_VERSION} https://github.com/shiguredo/otp.git \
  && cd /usr/local/src/otp \
  && ./otp_build autoconf \
  && ./configure --prefix=/opt/shiguredo-otp-${OTP_VERSION} \
                 --enable-kernel-poll \
                 --enable-hipe \
                 --enable-dirty-schedulers \
                 --enable-smp-support \
                 --enable-m64-build \
                 --without-javac \
                 --disable-vm-probes \
                 --disable-megaco-flex-scanner-lineno \
                 --disable-megaco-reentrant-flex-scanner \
  && make \
  && make install \
  && cd .. \
  && rm -rf otp

ENV PATH /opt/shiguredo-otp-${OTP_VERSION}/bin:$PATH

WORKDIR /
